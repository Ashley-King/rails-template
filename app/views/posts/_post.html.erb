<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Author email:</strong>
    <%= post.author_email %>
  </p>

  <p>
    <strong>Published on:</strong>
    <%= post.published_on %>
  </p>
   <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>
   <p>
    <strong>Author:</strong>
    <%= post.author_bio %>
  </p>
   <p>
    <strong>References:</strong>
    <%= post.references_section %>
  </p>

</div>
